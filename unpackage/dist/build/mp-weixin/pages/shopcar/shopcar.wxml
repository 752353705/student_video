ck></view></view></block><view class="cart-bottom"><view data-event-opts="{{[['tap',[['checkedAll',['$event']]]]]}}" class="{{[checkedAllStatus?'checked checkbox':'checkbox']}}" bindtap="__e">{{"全选("+cartTotal.checkedGoodsCount+")"}}</view><view class="total">{{!isEditCart?'￥'+cartTotal.checkedGoodsAmount:''}}</view><view class="action_btn_area"><view data-event-opts="{{[['tap',[['editCart',['$event']]]]]}}" class="{{[!isEditCart?'edit':'sure']}}" bindtap="__e">{{!isEditCart?'编辑':'完成'}}</view><block wx:if="{{isEditCart}}"><view data-event-opts="{{[['tap',[['deleteCart',['$event']]]]]}}" class="delete" bindtap="__e">{{"删除("+cartTotal.checkedGoodsCount+")"}}</view></block><block wx:if="{{!isEditCart}}"><view data-event-opts="{{[['tap',[['checkoutOrder',['$event']]]]]}}" class="checkout" bindtap="__e">下单</view></block></view></view></view></block></view></block></view>