.propaganda {
  box-sizing: border-box;
  padding: 200rpx 22rpx;
  padding-top: 0rpx;
}
.propaganda .main {
  border-radius: 8rpx;
  box-sizing: border-box;
}
.propaganda .main .main_body .item {
  margin: 24rpx 0rpx;
}
.propaganda .main .main_body .item .top_img {
  position: relative;
}
.propaganda .main .main_body .item .top_img .txt {
  font-weight: bold;
  position: absolute;
  bottom: 17rpx;
  left: 0rpx;
  color: white;
  padding-left: 24rpx;
  padding-right: 24rpx;
  -webkit-text-stroke: 1rpx black;
}
.propaganda .main .main_body .item .top_img image {
  width: 100%;
  height: 100%;
}
.propaganda .main .main_body .item .btm {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  box-sizing: border-box;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.propaganda .main .main_body .item .btm .item_le_title {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* autoprefixer: off */
  -webkit-box-orient: vertical;
  /* autoprefixer: on */
  -webkit-line-clamp: 2;
}
.propaganda .main .main_body .item .btm .from {
  font-size: 24rpx;
  color: #999999;
}
.propaganda .main .main_body .item .btm .item_le_img {
  width: 120rpx;
}
.propaganda .main .main_body .item:last-child {
  border: none;
}

