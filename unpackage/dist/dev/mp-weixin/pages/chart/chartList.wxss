.tabMsg {
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
}
.tabMsg .tab_head {
  background-color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  padding: 40rpx 10rpx;
}
.tabMsg .tab_head .head_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.tabMsg .tab_head .head_item .img {
  width: 80rpx;
  height: 80rpx;
}
.tabMsg .tab_head .head_item .msg {
  margin-top: 20rpx;
}
.tabMsg .head::after {
  content: ' ';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  background: gray;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.tabMsg .content {
  width: 100%;
  background-color: white;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 17rpx 30rpx;
}
.tabMsg .content .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
}
.tabMsg .content image {
  width: 120rpx;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 120rpx;
          flex: 0 0 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
}
.tabMsg .content .title {
  text-align: left;
  font-size: 28rpx;
  color: red;
  margin-top: 20rpx;
}
.tabMsg .content .title-wrap {
  width: 100%;
}
.tabMsg .content .title-wrap .right_top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 6rpx;
}
.tabMsg .content .title-wrap .right_top .name {
  font-size: 39rpx;
}
.tabMsg .content .title-wrap .right_top .time {
  color: #8d8d8d;
  font-size: 26rpx;
}
.tabMsg .content .title-wrap .title {
  width: 220px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #8d8d8d;
}

