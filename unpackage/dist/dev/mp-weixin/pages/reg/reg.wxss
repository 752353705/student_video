.reg {
  color: white;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #0d0639;
}
.reg .img {
  width: 100%;
  height: 417rpx;
  position: relative;
}
.reg .img image {
  width: 140.27rpx;
  height: 197.91rpx;
  position: absolute;
  top: 139rpx;
  right: 0;
  left: 0;
  margin: auto;
}
.reg .form {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  color: #c3bec5;
}
.reg .form .phone,
.reg .form .password {
  width: 638.19rpx;
  height: 75.69rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: start;
          justify-content: start;
  margin-bottom: 37rpx;
  box-sizing: border-box;
  padding-left: 17px;
  padding-top: 6px;
  background-color: #311a8e;
  border-radius: 20rpx;
}
.reg .form .icon {
  margin-right: 10rpx;
}
.reg .form button {
  height: 80.86rpx;
  width: 320.13rpx;
  line-height: 79.13rpx;
  background-image: -webkit-linear-gradient(left, #421ea2, #7352ad);
  background-image: linear-gradient(to right, #421ea2, #7352ad);
  color: white;
  border-radius: 40rpx;
  overflow: hidden;
  margin: 38rpx auto;
}
.reg .form .t_c {
  text-align: center;
}
.reg .form .txt {
  color: #5b5487;
}

