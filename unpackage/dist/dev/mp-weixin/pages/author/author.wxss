.pd-list{
	background-color: #fff;
}
.pd-li{
	position: relative;
	height: 160rpx;
	padding: 20rpx 16rpx 20rpx 240rpx;
	border-bottom: 1rpx solid #eee;
}
.pd-li .pd-img{
	position: absolute !important; /*编译到H5,在mescroll-more的案例中需加上!important,解决tab切换过快定位失效的问题*/
	left: 36rpx;
	top: 20rpx;
	width: 160rpx;
	height: 160rpx;
}
.pd-li .pd-name{
	font-size: 26rpx;
	line-height: 40rpx;
	height: 80rpx;
	margin-bottom: 20rpx;
	overflow: hidden;
}
.pd-li .pd-price{
	font-size: 26rpx;
	color: red;
}
.pd-li .pd-sold{
	font-size: 24rpx;
	margin-left: 16rpx;
	color: gray;
}

.author {
  width: 100%;
  height: 69.44rpx;
}
.author .head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  padding: 40rpx 40rpx;
}
.author .head .userImg {
  width: 150rpx;
  height: 150rpx;
  background-color: yellow;
  border-radius: 50%;
}
.author .head .right {
  width: 77%;
  margin-left: 30rpx;
}
.author .head .right .box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.author .head .right .rightBtm {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.author .head .right .rightBtm image {
  width: 60rpx;
  height: 60rpx;
}
.author .head .right .rightBtm .focusBtn {
  width: 80%;
  height: 40rpx;
  border-radius: 40rpx;
  color: white;
  background-color: red;
  padding: 10rpx 0;
}
.author .authorMsg {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.author .content .uni-tab-bar {
  box-sizing: border-box;
  padding: 10rpx 10rpx;
}
.author .content .swiper-box {
  width: 100%;
  height: 800px;
}

