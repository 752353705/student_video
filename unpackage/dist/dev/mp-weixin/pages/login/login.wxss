.btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 80rpx;
  padding: 0;
  border-radius: 20rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}
.btn.cancel {
  margin-right: 22rpx;
  color: #9b9b9b;
  background: #ededed;
}
.btn.login_wei {
  margin-right: 0;
