button {
  line-height: 79.13rpx;
  color: white;
  border-radius: 40rpx;
  overflow: hidden;
  margin: 0;
  font-size: 11px;
  padding: 0;
  text-align: end;
  color: #838383;
}
button::after {
  border: none;
}
image {
  width: 100%;
  height: 100%;
}
.news {
  box-sizing: border-box;
  padding: 20rpx 22rpx;
}
.news .body {
  box-sizing: border-box;
  background-color: #FFFFFF;
  padding: 40rpx 28rpx;
}
.news .body .title {
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.news .body .time {
  color: #999999;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.news .body .news_conent {
  margin-top: 40rpx;
}
.news .body .news_conent .news_img {
  margin-bottom: 40rpx;
}
.news .body .news_conent .img_box {
  width: 666rpx;
}
.news .body .news_conent .img_box image {
  width: 100%;
}
.news .share {
  margin-top: 40rpx;
  height: 66rpx;
}
.news .share .le {
  color: #999999;
  width: 182rpx;
  line-height: 66rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
}
.news .share .ri .img_box {
  margin-left: 20rpx;
  width: 138rpx;
  height: 66rpx;
}
.news .ad_img {
  height: 196rpx;
  background-color: blue;
  margin-bottom: 42rpx;
  margin-top: 42rpx;
}
.news .recommended {
  background-color: #FFFFFF;
  height: 844rpx;
  padding: 40rpx 26rpx 30rpx 30rpx;
  border-radius: 8rpx;
}
.news .recommended .head .line {
  width: 50rpx;
  height: 1rpx;
  background-color: #D8D8D8;
}
.news .recommended .head .tit {
  margin: 0rpx 12rpx;
}
.news .recommended .cont .item {
  padding: 26rpx 0rpx;
  border-bottom: 1rpx solid #E3E3E3;
}
.news .recommended .cont .item .item_le {
  width: 364rpx;
}
.news .recommended .cont .item .item_le .item_le_title {
  font-size: 32rpx;
}
.news .recommended .cont .item .item_le .from {
  margin-top: 70rpx;
  color: #999999;
  font-size: 24rpx;
}
.news .recommended .cont .item .item_ri {
  width: 242rpx;
  height: 198rpx;
  background-color: red;
  border-radius: 16rpx;
}
.news .recommended .cont .item:last-child {
  border: none;
}
.news .operation {
  width: 297rpx;
  line-height: 59rpx;
  background-color: white;
  position: fixed;
  top: 30rpx;
  right: 24rpx;
  z-index: 10;
  text-align: center;
  border-radius: 20rpx;
}
.news .operation .triangle {
  position: absolute;
  top: -28rpx;
  right: 123rpx;
  width: 0;
  height: 0;
  border-left: 9px solid transparent;
  border-right: 9px solid transparent;
  border-bottom: 15px solid white;
}
.news .mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: gray;
  opacity: .7;
}
.news .circle {
  position: fixed;
  right: 10rpx;
  top: 10rpx;
}

