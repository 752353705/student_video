<view><view class="container"><view class="h"><view class="{{[status==0?'active item':'item']}}" data-index="0" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">未使用</view></view><view class="{{[status==1?'active item':' item']}}" data-index="1" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">已使用</view></view><view class="{{[status==2?'active item':'item']}}" data-index="2" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">已过期</view></view></view><scroll-view class="coupon-list" scroll-y="true" scroll-top="{{scrollTop}}"><block wx:for="{{couponList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="item" data-index="{{item.id}}" data-event-opts="{{[['tap',[['getCoupon',['$event']]]]]}}" bindtap="__e"><view class="tag">{{item.tag}}</view><view class="content"><view class="left"><view class="discount">{{item.discount+"元"}}</view><view class="min">{{'满'+item.min+"元使用"}}</view></view><view class="right"><view class="name">{{item.name}}</view><view class="desc">{{item.desc}}</view><block wx:if="{{item.days&&item.days!=0}}"><view class="time">{{"有效期："+item.days+"天"}}</view></block><block wx:else><view class="time">{{'有效期：'+item.startTime+" - "+item.endTime}}</view></block></view><view class="couponbg"></view></view></view></block><block wx:if="{{showPage}}"><view class="page"><view data-event-opts="{{[['tap',[['prevPage',['$event']]]]]}}" class="{{[page<=1?'disabled prev':'prev']}}" bindtap="__e">上一页</view><view data-event-opts="{{[['tap',[['nextPage',['$event']]]]]}}" class="{{[count/size<page?'disabled next':'next']}}" bindtap="__e">下一页</view></view></block></scroll-view></view></view>