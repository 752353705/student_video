<view class="container"><view class="orders-switch"><view class="{{[showType==0?'active item':'item']}}" data-index="0" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">全部</view></view><view class="{{[showType==1?'active item':'item']}}" data-index="1" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">待付款</view></view><view class="{{[showType==2?'active item':'item']}}" data-index="2" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">待发货</view></view><view class="{{[showType==3?'active item':'item']}}" data-index="3" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">待收货</view></view><view class="{{[showType==4?'active item':'item']}}" data-index="4" data-event-opts="{{[['tap',[['switchTab',['$event']]]]]}}" bindtap="__e"><view class="txt">待评价</view></view></view><block wx:if="{{orderList.length<=0}}"><view class="no-order"><view class="c"><image src="/static/images/noCart.png"></image></view></view></block><view class="orders"><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="order"><navigator class="h" url="{{'../orderDetail/orderDetail?id='+item.id}}"><view class="l">{{"订单编号："+item.orderSn}}</view><view class="r">{{item.orderStatusText}}</view></navigator><navigator class="goods" url="{{'../orderDetail/orderDetail?id='+item.id}}"><block wx:for="{{item.goodsList}}" wx:for-item="gitem" wx:for-index="index" wx:key="id"><view class="item"><view class="img"><image src="{{gitem.picUrl}}"></image></view><view class="info"><view class="t"><text class="name">{{gitem.goodsName}}</text></view><view class="t"><text class="attr">{{gitem.specifications}}</text><text class="number">{{"共 "+gitem.number+" 件商品"}}</text></view><view class="price">{{"￥"+gitem.price}}</view><block wx:if="{{item.handleOption.comment&&gitem.comment==0}}"><view class="btn active"><navigator url="{{'../../commentPost/commentPost?orderId='+gitem.orderId&&'valueId='+gitem.goodsId&'type='+0}}">去评价</navigator></view></block><block wx:if="{{item.handleOption.rebuy}}"><view class="btn active"><navigator url="{{'../../goods/goods?id='+gitem.goodsId}}">再次购买</navigator></view></block></view></view></block></navigator><view class="b"><view class="l">实付：<text class="cost">{{"￥"+item.actualPrice}}</text></view><view class="r"><block wx:if="{{item.handleOption.cancel}}"><view class="btn active" data-index="{{item.id}}" data-event-opts="{{[['tap',[['cancelOrder',['$event']]]]]}}" bindtap="__e">取消订单</view></block><block wx:if="{{item.handleOption.pay}}"><view class="btn active" data-index="{{item.id}}" data-event-opts="{{[['tap',[['payOrder',['$event']]]]]}}" bindtap="__e">去付款</view></block><block wx:if="{{item.handleOption.confirm}}"><view class="btn active" da:ta-index="{{item.id}}" data-event-opts="{{[['tap',[['detailExpress',['$event']]]]]}}" bindtap="__e">查看物流</view></block><block wx:if="{{item.handleOption.confirm}}"><view class="btn active" data-index="{{item.id}}" data-event-opts="{{[['tap',[['confirmOrder',['$event']]]]]}}" bindtap="__e">确认收货</view></block><block wx:if="{{item.handleOption.delete}}"><view class="btn active" data-index="{{item.id}}" data-event-opts="{{[['tap',[['deleteOrder',['$event']]]]]}}" bindtap="__e">删除订单</view></block><block wx:if="{{item.handleOption.refund}}"><view class="btn active" data-index="{{item.id}}" data-event-opts="{{[['tap',[['refundOrder',['$event']]]]]}}" bindtap="__e">申请退款</view></block></view></view></view></block></view></view>