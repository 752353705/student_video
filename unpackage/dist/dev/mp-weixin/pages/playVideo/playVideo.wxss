.playVideo {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.playVideo .uni_vdplayer {
  position: relative;
  height: 100%;
  background-color: black;
}
.playVideo .uni_vdplayer .back {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 67rpx;
  left: 30rpx;
}
.playVideo .uni_vdplayer video {
  width: 100%;
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.playVideo .uni_vdplayer .vd-cover {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 100rpx;
  height: 100rpx;
}
.playVideo .uni_vdplayer .vd-cover image {
  width: 100rpx;
  height: 100rpx;
}
.playVideo .uni_vdplayer .full image {
  width: 100rpx;
  height: 100rpx;
}
.playVideo .uni_vdplayer .foot {
  width: 100%;
  height: 280rpx;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  padding: 20rpx 40rpx 10rpx;
}
.playVideo .uni_vdplayer .foot .foot_head {
  width: 100%;
  height: 100rpx;
  color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: start;
          justify-content: start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.playVideo .uni_vdplayer .foot .foot_head .foot_head_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.playVideo .uni_vdplayer .foot .foot_head .foot_head_box .foot_head_img {
  width: 60rpx;
  height: 60rpx;
  background-color: yellow;
  border-radius: 50%;
  margin-right: 20rpx;
}
.playVideo .uni_vdplayer .foot .foot_head ._span {
  display: inline-block;
  background-color: red;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  font-size: 20rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}
.playVideo .uni_vdplayer .right {
  width: 100rpx;
  height: 335rpx;
  background-color: transparent;
  position: absolute;
  right: 23rpx;
  top: 68%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.playVideo .uni_vdplayer .right .icon image {
  width: 50rpx;
  height: 50rpx;
}

