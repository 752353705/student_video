.tabMsg {
  background-color: #f6f6f6;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  box-sizing: border-box;
}
.tabMsg .tab_head {
  background-color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  position: relative;
  padding: 40rpx 10rpx;
}
.tabMsg .tab_head .head_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.tabMsg .tab_head .head_item image {
  width: 80rpx;
  height: 80rpx;
}
.tabMsg .tab_head .head_item .msg {
  margin-top: 20rpx;
}
.tabMsg .head::after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  background: gray;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.tabMsg .content {
  width: 100%;
  background-color: white;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 17rpx 30rpx;
}
.tabMsg .content .con_item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.tabMsg .content .con_item .left {
  width: 88.88rpx;
  height: 88.88rpx;
  background-color: yellow;
  border-radius: 50%;
}
.tabMsg .content .con_item .right {
  width: 84%;
  position: relative;
  box-sizing: border-box;
  padding-bottom: 41rpx;
}
.tabMsg .content .con_item .right .right_top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin-bottom: 6rpx;
}
.tabMsg .content .con_item .right .right_top .name {
  font-size: 39rpx;
}
.tabMsg .content .con_item .right .right_top .time {
  color: #8d8d8d;
  font-size: 26rpx;
}
.tabMsg .content .con_item .right .con_msg {
  width: 60%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #8d8d8d;
}
.tabMsg .content .con_item .right::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background: gray;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}

