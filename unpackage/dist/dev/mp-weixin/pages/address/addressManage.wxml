<view class="content"><view class="add-address"><view class="add-form"><view class="form-item"><input class="input" placeholder="姓名" auto-focus="{{true}}" data-event-opts="{{[['input',[['bindinputName',['$event']]]]]}}" value="{{address.name}}" bindinput="__e"/></view><view class="form-item"><input class="input" placeholder="手机号码" data-event-opts="{{[['input',[['bindinputMobile',['$event']]]]]}}" value="{{address.mobile}}" bindinput="__e"/></view><view class="form-item"><input class="input" disabled="true" placeholder="省份、城市、区县" data-event-opts="{{[['tap',[['chooseRegion',['$event']]]]]}}" value="{{address.provinceName+address.cityName+address.areaName}}" bindtap="__e"/></view><view class="form-item"><input class="input" placeholder="详细地址, 如街道、楼盘号等" data-event-opts="{{[['input',[['bindinputAddress',['$event']]]]]}}" value="{{address.address}}" bindinput="__e"/></view><view class="form-default"><text data-event-opts="{{[['tap',[['bindIsDefault',['$event']]]]]}}" class="{{[address.isDefault==1?'selected default-input':'default-input']}}" bindtap="__e">设为默认地址</text></view></view><view class="btns"><button data-event-opts="{{[['tap',[['cancelAddress',['$event']]]]]}}" class="cannel" bindtap="__e">取消</button><button data-event-opts="{{[['tap',[['saveAddress',['$event']]]]]}}" class="save" bindtap="__e">保存</button></view><block wx:if="{{openSelectRegion}}"><view class="region-select"><view class="hd"><view class="region-selected"><block wx:for="{{selectRegionList}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="{{[item.id==0?regionType-1===index?'selected disabled item':'disabled item':regionType-1===index?'selected item':'item']}}" data-region-type-index="{{index}}" data-event-opts="{{[['tap',[['selectRegionType',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}</view></block></view><view data-event-opts="{{[['tap',[['doneSelectRegion',['$event']]]]]}}" class="{{[selectRegionDone?'done':'disabled done']}}" bindtap="__e">确定</view></view><view class="bd"><scroll-view class="region-list" scroll-y="{{true}}"><block wx:for="{{regionList}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="{{[item.selected?'selected item':'item']}}" data-region-index="{{index}}" data-event-opts="{{[['tap',[['selectRegion',['$event']]]]]}}" bindtap="__e">{{''+item.name+''}}</view></block></scroll-view></view></view></block></view><block wx:if="{{openSelectRegion}}"><view data-event-opts="{{[['tap',[['cancelSelectRegion',['$event']]]]]}}" class="bg-mask" bindtap="__e"></view></block></view>